{
  "manifest_version": 3,
  "name": "Wordstat Word Collector",
  "version": "0.3.0",
  "description": "Collect words from Yandex Wordstat with +/- toggles and a draggable widget. Local storage only.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://wordstat.yandex.ru/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://wordstat.yandex.ru/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ]
}